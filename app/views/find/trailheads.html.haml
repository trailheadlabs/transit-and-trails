:javascript
  find_mode = 'TRAILHEADS';
= content_for :map do
  .map-mode
    #find-map-disable
    .map
      #find_map
.map-mode
  .container
    .row
      .span4#mapfilters
        .mapfilters
          .message
            %a#scrolltop(href="#top")
              Filters
              %i.icon-circle-arrow-up.pull-right
          .filters
            = render :partial => "trailhead_filters"
      .span8.relative.top
        .maplist
          #progress
            %h4
              Loading
            .progress.progress-striped.active
              .bar{:style => "width: 100%;"}
          #findlist
