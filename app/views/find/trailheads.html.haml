:javascript
  find_mode = 'TRAILHEADS';
.container.trailheads
  .row
    .span4#mapfilters
      .mapfilters
        .message
          %a#scrolltop(href="#top")
            Filters
            %i.icon-circle-arrow-up.pull-right
        .list-header
          .list-header-icon
          %span.badge.badge-inverse#trailhead-count
            0
