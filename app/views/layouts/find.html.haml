!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = render "/layouts/facebook_meta_tags"
    %title= content_for?(:title) ? yield(:title) : "Transit & Trails : Find, Plan and Share Outdoor Adventures"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = javascript_include_tag "legacy/common"
    = javascript_include_tag "find"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "find", :media => "all"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyCcUhpQftpOwXVSLJqHrvwYCqnhTy3bchE&sensor=false&libraries=places"
    = yield :head
  %body
    = render :partial => "layouts/navbar"

    #wrap
      #main
        = yield
        .container
          .row
            .span4#mapfilters
              .mapfilters
                .message
                  %a#scrolltop(href="#top")
                    Filters
                    %i.icon-circle-arrow-up.pull-right
                = yield :list_filters
            .span8
              .map
                #find-map-disable
                #find_map
              .map-buttons
                %a#map_size_toggle.btn.btn-primary.btn.btn-round
                  Bigger Map
              #progress
                %h4
                  Loading
                .progress.progress-striped.active
                  .bar{:style => "width: 100%;"}
              .notice-list
                - flash.each do |name, msg|
                  - if msg.is_a?(String)
                    .notice
                      %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
                        %a.close{"data-dismiss" => "alert"} Ã—
                        = content_tag :div, msg, :id => "flash_#{name}"
                #findlist
      #push
    = render :partial => "layouts/footer"
    = render :partial => "/layouts/tracking"
    %script
      starting_lat = #{session[:starting_lat] || 37.78};
      starting_lng = #{session[:starting_lng] || -122.42};
      starting_zoom = #{session[:starting_zoom] || 11};
