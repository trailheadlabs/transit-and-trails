.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.brand(href="/")
        = image_tag "navbar_logo.png"
      %ul.nav
        - if params[:action] == "trips"
          %li.active
            = link_to 'Trips', '/find/v2/trips'
        - else
          %li
            = link_to 'Trips', '/find/v2/trips'
        - if params[:action] == "trailheads"
          %li.active
            = link_to 'Trailheads', '/find/v2/trailheads'
        - else
          %li
            = link_to 'Trailheads', '/find/v2/trailheads'
        - if params[:action] == "campgrounds"
          %li.active
            = link_to 'Campgrounds', '/find/v2/campgrounds'
        - else
          %li
            = link_to 'Campgrounds', '/find/v2/campgrounds'
      %ul.nav.pull-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.username
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to "Account", edit_user_registration_path
              %li
                = link_to 'Profile', profile_path
              - if current_user.admin?
                %li
                  = link_to 'Admin', rails_admin_path
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.icon-signout
                  Sign Out
        - else
          %li
            = link_to new_user_session_path do
              %i.icon-signin
              Sign In
          / %li
          /   = link_to "|", "#"
          / %li
          /   = link_to "Sign Up", new_user_registration_path
