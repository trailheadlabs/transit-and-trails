!!! 5
%html(lang="en" xmlns="http://www.w3.org/1999/xhtml"
      xmlns:og="http://ogp.me/ns#"
      xmlns:fb="https://www.facebook.com/2008/fbml")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Transit & Trails : Find, Plan and Share Outdoor Adventures"
    = csrf_meta_tags
    = render "/layouts/facebook_meta_tags"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "landing", :media => "all"
    = yield :head
  %body

    #wrap
      = render :partial => "layouts/navbar", :locals => {:landing_page=>true}
      = yield
      #push
    = render :partial => "layouts/footer"
    = render :partial => "/layouts/tracking"
