!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Transit & Trails : Find, Plan and Share Outdoor Experiences"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
    = yield :head
  %body

    #wrap
      = render :partial => "layouts/v2_navbar"
      #main
        .container.main
          .messages
            - flash.each do |name, msg|
              - if msg.is_a?(String)
                .notice
                  %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
                    %a.close{"data-dismiss" => "alert"} Ã—
                    = content_tag :div, msg, :id => "flash_#{name}"
          = yield
      #push
    = render :partial => "layouts/v2_footer"
    = render :partial => "/layouts/tracking"
