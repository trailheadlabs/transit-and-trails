= form_for @trip do |f|
  -if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :intensity
    = f.text_field :intensity
  .field
    = f.label :duration
    = f.text_field :duration
  .field
    = f.label :starting_trailhead_id
    = f.number_field :starting_trailhead_id
  .field
    = f.label :ending_trailhead_id
    = f.number_field :ending_trailhead_id
  .field
    = f.label :route
    = f.text_area :route
  .actions
    = f.submit 'Save'
